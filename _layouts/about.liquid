---
layout: default
---

<!-- ═══════════════════════════════════════════════════════════ -->
<!-- AL-FOLIO — Hero + Bento Grid Homepage                      -->
<!-- Replace _layouts/about.liquid with this file               -->
<!-- ═══════════════════════════════════════════════════════════ -->

<div class="post about">
  <article>

    <!-- ══════════════════════════════════════════════════ -->
    <!-- SECTION 1: FULL-SCREEN HERO                       -->
    <!-- ══════════════════════════════════════════════════ -->
    <section class="hero-section">
      <div class="hero-overlay"></div>
      <div class="hero-scanline"><div class="hero-scanline-inner"></div></div>

      <div class="hero-content">

        {% if page.profile %}
        <div class="hero-avatar">
          <div class="hero-avatar-ring"></div>
          <div class="hero-avatar-inner">
            {% if page.profile.image %}
              {% if page.profile.image_circular %}
                {% assign profile_image_class = "img-fluid z-depth-1 rounded-circle" %}
              {% else %}
                {% assign profile_image_class = "img-fluid z-depth-1" %}
              {% endif %}
              {% assign profile_image_path = page.profile.image | prepend: 'assets/img/' %}
              {% capture sizes %}(min-width: {{site.max_width}}) {{ site.max_width | minus: 30 | times: 0.3}}px, (min-width: 576px) 30vw, 95vw{% endcapture %}
              {%
                include figure.liquid loading="eager" path=profile_image_path
                class=profile_image_class sizes=sizes
                alt=page.profile.image_alt
                cache_bust=true
              %}
            {% endif %}
          </div>
        </div>
        {% endif %}

        <!-- Terminal prompt -->
        <div class="hero-prompt">$ whoami</div>

        <!-- Name -->
        <h1 class="hero-name">{{ site.first_name }} {{ site.last_name }}</h1>

        <!-- Subtitle -->
        {% if page.subtitle %}
        <div class="hero-subtitle">{{ page.subtitle }}</div>
        {% endif %}

        <!-- Typing tagline -->
        {% if page.typing_tagline %}
        <div class="hero-typing">
          <span class="typing-prefix">&gt;</span>
          <span data-typing="{{ page.typing_tagline | join: '|' }}"></span>
        </div>
        {% endif %}

        <!-- Short bio -->
        <div class="hero-bio">{{ content }}</div>

        <!-- Research tags -->
        {% if page.research_interests %}
        <div class="hero-tags">
          {% for interest in page.research_interests %}
            <span class="research-tag">{{ interest }}</span>
          {% endfor %}
        </div>
        {% endif %}

        <!-- Social icons -->
        {% if page.social %}
        <div class="hero-social">
          <div class="contact-icons">{{ page.social }}</div>
        </div>
        {% endif %}

      </div>

      <!-- Scroll indicator -->
      <div class="hero-scroll-hint">
        <span>SCROLL</span>
        <div class="hero-scroll-line"></div>
      </div>
    </section>

    <!-- ══════════════════════════════════════════════════ -->
    <!-- SECTION 2: BENTO GRID                             -->
    <!-- ══════════════════════════════════════════════════ -->
    <section class="bento-section">

      <div class="bento-divider">
        <div class="bento-divider-line"></div>
        <span class="bento-divider-text">EXPLORE MORE</span>
        <div class="bento-divider-line bento-divider-line-right"></div>
      </div>

      <div class="bento-grid">

        <!-- ── Stats Row: full width ── -->
        {% if page.stats %}
        <div class="bento-cell bento-col-6 bento-stats">
          {% for stat in page.stats %}
          <div class="bento-stat-item">
            <div class="stat-number" data-count="{{ stat.count }}" data-suffix="{{ stat.suffix | default: '' }}">0{{ stat.suffix | default: '' }}</div>
            <div class="stat-label">{{ stat.label }}</div>
          </div>
          {% endfor %}
        </div>
        {% endif %}

        <!-- ── News: left half ── -->
        {% if page.news and site.announcements.enabled %}
        <div class="bento-cell bento-col-3 bento-row-2">
          <div class="bento-section-label">
            <span class="label-line"></span>// Latest News<span class="label-line-fade"></span>
          </div>
          {% include news.liquid limit=true %}
        </div>
        {% endif %}

        <!-- ── Publications: right half ── -->
        {% if page.selected_papers %}
        <div class="bento-cell bento-col-3 bento-row-2 bento-cell-glow">
          <div class="bento-section-label">
            <span class="label-line"></span>// Selected Publications<span class="label-line-fade"></span>
          </div>
          {% include selected_papers.liquid %}
          <div class="bento-view-all">
            <a href="{{ '/publications/' | relative_url }}" class="view-all-link">→ View All</a>
          </div>
        </div>
        {% endif %}

        <!-- ── Projects: 3 cards ── -->
        {% if site.enable_project_categories and page.selected_projects %}
          {% assign projects = site.projects | where: "selected", true | sort: "importance" %}
          {% for project in projects limit: 3 %}
          <div class="bento-cell bento-col-2 bento-project-card">
            {% if project.img %}
            <div class="bento-project-img">
              <img src="{{ project.img | relative_url }}" alt="{{ project.title }}" loading="lazy" />
            </div>
            {% else %}
            <div class="bento-project-img bento-project-placeholder"></div>
            {% endif %}
            <a href="{{ project.url | relative_url }}" class="bento-project-title">{{ project.title }}</a>
            {% if project.description %}
            <div class="bento-project-desc">{{ project.description | truncate: 80 }}</div>
            {% endif %}
          </div>
          {% endfor %}
        {% endif %}

        <!-- ── Timeline ── -->
        {% if page.timeline %}
        <div class="bento-cell bento-col-4 bento-timeline">
          {% for milestone in page.timeline %}
          <div class="timeline-item {% if milestone.active %}timeline-active{% endif %}">
            {% unless forloop.first %}<div class="timeline-connector"></div>{% endunless %}
            <div class="timeline-dot"></div>
            <div class="timeline-label">{{ milestone.title }}</div>
            <div class="timeline-year">{{ milestone.year }}</div>
          </div>
          {% endfor %}
        </div>
        {% endif %}

        <!-- ── Quote ── -->
        {% if page.quote %}
        <div class="bento-cell bento-col-2 bento-quote">
          <div class="bento-quote-text">"{{ page.quote.text }}"</div>
          <div class="bento-quote-author">— {{ page.quote.author }}</div>
        </div>
        {% endif %}

        <!-- ── Latest Posts ── -->
        {% if page.latest_posts %}
        <div class="bento-cell bento-col-6">
          <div class="bento-section-label">
            <span class="label-line"></span>// Recent Posts<span class="label-line-fade"></span>
          </div>
          {% include latest_posts.liquid %}
        </div>
        {% endif %}

      </div>
    </section>

  </article>
</div>
