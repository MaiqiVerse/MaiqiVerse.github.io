---
layout: default
---

<!-- ═══════════════════════════════════════════════════════════ -->
<!-- AL-FOLIO — Hero + Bento Grid Homepage (Fixed v2)           -->
<!-- Replace _layouts/about.liquid                              -->
<!-- ═══════════════════════════════════════════════════════════ -->

<div class="post about">
  <article>

    <!-- ══════════════════════════════════════════════════ -->
    <!-- HERO SECTION                                      -->
    <!-- ══════════════════════════════════════════════════ -->
    <section class="hero-section">
      <div class="hero-overlay"></div>

      <div class="hero-content">

        {% if page.profile and page.profile.image %}
        <div class="hero-avatar">
          <div class="hero-avatar-ring"></div>
          <div class="hero-avatar-bg"></div>
          {% assign profile_image_path = page.profile.image | prepend: 'assets/img/' %}
          {%- if page.profile.image_circular -%}
            <img src="{{ profile_image_path | relative_url }}" class="hero-avatar-img rounded-circle" alt="{{ page.profile.image_alt | default: 'profile photo' }}" />
          {%- else -%}
            <img src="{{ profile_image_path | relative_url }}" class="hero-avatar-img" alt="{{ page.profile.image_alt | default: 'profile photo' }}" />
          {%- endif -%}
        </div>
        {% endif %}

        <div class="hero-prompt">$ whoami</div>

        <h1 class="hero-name">{{ site.first_name }} {{ site.last_name }}</h1>

        {% if page.subtitle %}
        <div class="hero-subtitle">{{ page.subtitle }}</div>
        {% endif %}

        {% if page.typing_tagline %}
        <div class="hero-typing">
          <span class="typing-prefix">&gt;</span>
          <span class="typing-text" data-typing="{{ page.typing_tagline | join: '|' }}"></span>
        </div>
        {% endif %}

        <div class="hero-bio">
          {{ content }}
        </div>

        {% if page.research_interests %}
        <div class="hero-tags">
          {% for interest in page.research_interests %}
            <span class="research-tag">{{ interest }}</span>
          {% endfor %}
        </div>
        {% endif %}

        <!-- Social: use _config.yml social settings -->
        <div class="hero-social">
          {% if site.email %}
            <a href="mailto:{{ site.email }}" title="email"><i class="fa-solid fa-envelope"></i></a>
          {% endif %}
          {% if site.github_username %}
            <a href="https://github.com/{{ site.github_username }}" title="GitHub" target="_blank" rel="noopener noreferrer"><i class="fa-brands fa-github"></i></a>
          {% endif %}
          {% if site.scholar_userid %}
            <a href="https://scholar.google.com/citations?user={{ site.scholar_userid }}" title="Google Scholar" target="_blank" rel="noopener noreferrer"><i class="ai ai-google-scholar"></i></a>
          {% endif %}
          {% if site.twitter_username %}
            <a href="https://twitter.com/{{ site.twitter_username }}" title="Twitter" target="_blank" rel="noopener noreferrer"><i class="fa-brands fa-x-twitter"></i></a>
          {% endif %}
          {% if site.linkedin_username %}
            <a href="https://www.linkedin.com/in/{{ site.linkedin_username }}" title="LinkedIn" target="_blank" rel="noopener noreferrer"><i class="fa-brands fa-linkedin"></i></a>
          {% endif %}
          {% if site.orcid_id %}
            <a href="https://orcid.org/{{ site.orcid_id }}" title="ORCID" target="_blank" rel="noopener noreferrer"><i class="ai ai-orcid"></i></a>
          {% endif %}
        </div>

      </div>

      <div class="hero-scroll-hint">
        <span class="hero-scroll-text">SCROLL</span>
        <div class="hero-scroll-line"></div>
      </div>
    </section>

    <!-- ══════════════════════════════════════════════════ -->
    <!-- BENTO GRID                                        -->
    <!-- ══════════════════════════════════════════════════ -->
    <section class="bento-section">

      <div class="bento-divider">
        <div class="bento-divider-line"></div>
        <span class="bento-divider-text">EXPLORE MORE</span>
        <div class="bento-divider-line bento-divider-line-right"></div>
      </div>

      <div class="bento-grid">

        {% if page.stats %}
        <div class="bento-cell bento-col-full bento-stats">
          {% for stat in page.stats %}
          <div class="bento-stat-item">
            <div class="stat-number" data-count="{{ stat.count }}" data-suffix="{{ stat.suffix | default: '' }}">0{{ stat.suffix | default: '' }}</div>
            <div class="stat-label">{{ stat.label }}</div>
          </div>
          {% endfor %}
        </div>
        {% endif %}

        {% if page.news and site.announcements.enabled %}
        <div class="bento-cell bento-col-half bento-tall">
          <div class="bento-section-label">// Latest News</div>
          {% include news.liquid limit=true %}
        </div>
        {% endif %}

        {% if page.selected_papers %}
        <div class="bento-cell bento-col-half bento-tall bento-cell-glow">
          <div class="bento-section-label">// Selected Publications</div>
          {% include selected_papers.liquid %}
          <div style="text-align:center;margin-top:12px;">
            <a href="{{ '/publications/' | relative_url }}" class="view-all-link">→ View All</a>
          </div>
        </div>
        {% endif %}

        {% if site.enable_project_categories and page.selected_projects %}
          {% assign sel_projects = site.projects | where: "selected", true | sort: "importance" %}
          {% for project in sel_projects limit: 3 %}
          <div class="bento-cell bento-col-third bento-project-card">
            {% if project.img %}
            <div class="bento-project-img">
              <img src="{{ project.img | relative_url }}" alt="{{ project.title }}" loading="lazy" />
            </div>
            {% else %}
            <div class="bento-project-img bento-project-placeholder"></div>
            {% endif %}
            <a href="{{ project.url | relative_url }}" class="bento-project-title">{{ project.title }}</a>
            {% if project.description %}
            <div class="bento-project-desc">{{ project.description | truncate: 80 }}</div>
            {% endif %}
          </div>
          {% endfor %}
        {% endif %}

        {% if page.timeline %}
        <div class="bento-cell bento-col-two-third bento-timeline">
          {% for milestone in page.timeline %}
          <div class="timeline-item {% if milestone.active %}timeline-active{% endif %}">
            {% unless forloop.first %}<div class="timeline-connector"></div>{% endunless %}
            <div class="timeline-dot"></div>
            <div class="timeline-label">{{ milestone.title }}</div>
            <div class="timeline-year">{{ milestone.year }}</div>
          </div>
          {% endfor %}
        </div>
        {% endif %}

        {% if page.quote %}
        <div class="bento-cell bento-col-third bento-quote">
          <div class="bento-quote-text">"{{ page.quote.text }}"</div>
          <div class="bento-quote-author">— {{ page.quote.author }}</div>
        </div>
        {% endif %}

        {% if page.latest_posts %}
        <div class="bento-cell bento-col-full">
          <div class="bento-section-label">// Recent Posts</div>
          {% include latest_posts.liquid %}
        </div>
        {% endif %}

      </div>
    </section>

  </article>
</div>
